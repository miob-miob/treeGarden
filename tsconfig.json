{
  "compilerOptions": {
    "module": "UMD",
    "declaration": true,
    "outDir": "./dist",
    "target": "es5",
    "lib": ["ES2019"],
    "downlevelIteration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
