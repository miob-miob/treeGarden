{
  "name": "tree-garden",
  "version": "0.6.5",
  "description": "Decision trees library",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "node ./node_modules/jest/bin/jest.js",
    "build": "rimraf ./dist && tsc --noEmit false",
    "_clearMkDocsContainer": "docker rm --force mk_docs_container || true",
    "mkdocs": "npm run _clearMkDocsContainer && docker run -it --rm --name mk_docs_container -v $(pwd)/docs:/docs -p 9009:9009 --entrypoint sh squidfunk/mkdocs-material",
    "generateApiDoc": "typedoc --plugin typedoc-plugin-markdown",
    "lint": "eslint --ext .js,.jsx,.es6,.ts,.tsx ./src/",
    "checkTypes": "tsc",
    "preversion": "npm run checkTypes && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miob-miob/treeGarden.git"
  },
  "keywords": [
    "ml",
    "decision",
    "trees"
  ],
  "author": "miob",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/miob-miob/treeGarden/issues"
  },
  "homepage": "https://github.com/miob-miob/treeGarden",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.4.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.9.1",
    "typedoc-plugin-markdown": "^3.13.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coveragePathIgnorePatterns": [
      "/mocks/*"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
